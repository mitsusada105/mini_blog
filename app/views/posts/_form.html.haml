.card
  .card-body
    = form_with model: @post, local: true do |f|
      .form-group
        = f.label :content, "投稿内容"
        = f.text_area :content, placeholder: "何か思ったことを記入（140字以内）", class: "form-control"
      
      .form-group
        = f.label :image, "画像を選択"
        = f.file_field :image, class: "form-control"
      
      = f.submit "投稿する", class: "btn btn-primary"